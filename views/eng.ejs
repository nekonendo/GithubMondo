<!DOCTYPE html>
<html>
  <!--ヘッド*/-->
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mon-Do</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/stylesheet1.css" />
    <script src="/javascripts/english.js"></script>
    <script src="/javascripts/header.js"></script>
  </head>

  <!--ボディ-->
  <body>
    <!--ヘッダー呼び出し-->
    <%- include('header'); %>
    <!--本文-->
    <div class="choice" id="content">
      <form action="/print/other" method="post">
        <div class="ctl">
          <div class="quecount">
            <h2>問題数</h2>
            <div class="count">
              <label for="5"><input type="radio" name="quecount" value="5" id="5" />5問</label>
              <label for="10"><input type="radio" name="quecount" value="10" id="10" />10問</label>
              <label for="15"><input type="radio" name="quecount" value="15" id="15" checked />15問</label>
            </div>
          </div>
          <div class="tangens">
            <h2>出題範囲を選択してください</h2>
            <div class="word">
              <div class="pulldown">
                <p>区分</p>
                <select name="category" id="category">
                  <option value="">選択してください</option>
                  <option value="newhorizon1"<% if (category === 'newhorizon1') { %>selected<% } %>>NewHorizon１年</option>
                  <option value="newhorizon2"<% if (category === 'newhorizon2') { %>selected<% } %>>NewHorizon２年</option>
                  <option value="newhorizon3"<% if (category === 'newhorizon3') { %>selected<% } %>>NewHorizon３年</option>
                  <option value="newcrown1"<% if (category=== 'newcrown1') { %>selected<% } %>>NewCrown１年</option>
                  <option value="newcrown2"<% if (category === 'newcrown2') { %>selected<% } %>>NewCrown２年</option>
                  <option value="newcrown3"<% if (category === 'newcrown3') { %>selected<% } %>>NewCrown３年</option>
                </select>
                <div class="error-message"><%= categoryerror %></div>
              </div>
              <div class="pulldown">
                <p>単元</p>
                <select name="tangen" id="tangen">
                  <option value="">選択してください</option>
                </select>
                <div class="error-message"><%= tangenerror %></div>
              </div>
            </div>
          </div>
          <div class="printcount">
            <h2>印刷範囲</h2>
            <input type="radio" name="printrange" value="printall" />単元まるごと
            <input type="radio" name="printrange" value="printshufful" checked />シャッフル
          </div>
        </div>
        <div class="print">
          <input type="hidden" name="tableName" value="english" />
          <input type="submit" class="btn" value="印刷" />
        </div>
      </form>
    </div>
    <!--フッター呼び出し-->
    <%- include('footer'); %>
  </body>
</html>
